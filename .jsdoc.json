{
  "source": {
    "include": ["./src"]
  },
  "plugins": [
    "node_modules/jsdoc-export-default-interop/dist/index",
    "node_modules/jsdoc-typeof-plugin",
    "plugins/markdown"
  ],
  "opts": {
    "template": "./node_modules/postman-jsdoc-theme",
    "encoding": "utf8",
    "destination": "./docs/",
    "recurse": true,
    "readme": "./README.md"
  },
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false,
    "default": {
      "outputSourceFiles": true
    },
    "linenums": true
  },
  "markdown": {
    "parser": "gfm",
    "hardwrap": false
  }
}
